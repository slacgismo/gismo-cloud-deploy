module climate;
object csv_reader {
	name CsvReader;
	filename "./weather_data/NY_${FEEDER_GROUP}_weather_normal.csv";
}

object climate {
	name MyClimate;
	tmyfile "./weather_data/NY_${FEEDER_GROUP}_weather_normal.csv";
