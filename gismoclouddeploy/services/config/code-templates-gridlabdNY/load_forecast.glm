	name network_node_recorder;
	parent ${RECORDER_OBJECT};
	property measured_real_power,measured_reactive_power,measured_real_energy;
	file ./csv_output/${FEEDER_NAME}_network_node_recorder.csv;
	interval 3600;
#if RUN_TYPE==test
	limit 5;
